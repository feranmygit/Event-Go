@section Scripts {
    <script type="text/javascript">
        // This function will be triggered when the file is selected
        document.getElementById('ImageFile').addEventListener('change', function () {
            // Get the file name without the extension
            var fileName = this.files[0].name; // Get the selected file name

            // Set the ImageName input's value to the file name
            document.getElementById('ImageName').value = fileName;
        });
    </script>
}

