@model IEnumerable<Event_Go.Models.TicketRequest>

<h1>Expired Tickets</h1>

@if (!Model.Any())
{
    <p>No expired tickets to show.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Event.EventName</td>
                    <td>@ticket.Event.StartDate.ToString("dd MMM yyyy")</td>
                    <td>@ticket.Event.EndDate.ToString("dd MMM yyyy")</td>
                    <td>@ticket.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
