<div class="log-in-box">
    <div class="login-container-box">
        <div class="login-form-box">
            <form method="post">
                <h2>Admin Registration</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" role="alert" class="validation-summary"></div>

                <div class="form-group-box">
                    <input asp-for="Input.FirstName" aria-required="true" />
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="validation-message"></span>
                </div>

                <div class="form-group-box">
                    <input asp-for="Input.LastName" aria-required="true" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="validation-message"></span>
                </div>
                <div class="form-group-box">
                    <input asp-for="Input.Email" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="validation-message"></span>
                </div>
                <div class="form-group-box">
                    <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="validation-message"></span>
                </div>
                <div class="form-group-box">
                    <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="validation-message"></span>
                </div>
       
                <div class="form-links-box">
                    <button type="submit" class="btn-submit-box">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>